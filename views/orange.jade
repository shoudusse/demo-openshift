doctype html
html(lang='en')
head
    meta(charset='utf-8')
    title Orange Business Services Chat
    meta(name='viewport', content='initial-scale=1.0, width=device-width, \
      height=device-height, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
    link(rel='stylesheet', href='//cdn.jsdelivr.net/normalize/3.0.1/normalize.min.css')
    link(rel='stylesheet', href='/stylesheets/orange.css')
    link(rel='stylesheet', href='/stylesheets/animate.css')
  body
    h1.title MyCompany WebChat
    .wrapper
      nav#nav.nav
        .default-nav
          .main-nav
            .toggle
            .main-nav-item
              a#nickField.main-nav-item-link(href="#")
            .options
      .inner#inner
        .content#content
          - for(var i=0,ln=messages.length;i<ln;i++)
            .message-wrapper.them
              .circle-wrapper.animated.bounceIn=messages[i].nickname
              .text-wrapper.animated.fadeIn=messages[i].msg
      .bottom#bottom
        textarea.input#input
        .send#send
    script(src='//cdn.jsdelivr.net/jquery/2.1.1/jquery.min.js')
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/orange.js')
